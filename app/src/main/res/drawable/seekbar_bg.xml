<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 背景效果 -->

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <!-- angle 是角度 -->
            <gradient
                android:angle="270"
                android:centerColor="@color/seekbar_bg"
                android:centerY="0.75"
                android:endColor="@color/seekbar_bg"
                android:startColor="@color/seekbar_bg" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dp" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/appColor"
                    android:centerY="0.75"
                    android:endColor="@color/appColor"
                    android:startColor="@color/appColor" />
            </shape>
        </clip>
    </item>
</layer-list>