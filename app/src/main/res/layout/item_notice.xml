<?xml version="1.0" encoding="utf-8"?>
<com.saiyi.oldmanwatch.view.recyclerview.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_180"
    android:background="@color/appWhite">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_itemType="main">

        <ImageView
            android:id="@+id/iv_notice"
            android:layout_width="40dp"
            android:layout_height="@dimen/dp_40"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_notice"
            android:textColor="@color/txt_color"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_title"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@id/iv_notice"
            android:textColor="@color/txt_color"
            android:textSize="13dp" />

    </RelativeLayout>

    <Button
        android:id="@+id/tv_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/del_color"
        android:text="@string/detele"
        android:textColor="@color/appWhite"
        android:textSize="15dp"
        app:layout_itemType="menu" />
</com.saiyi.oldmanwatch.view.recyclerview.SwipeItemLayout>