<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/px_20"
        android:gravity="center"
        android:text="@string/custom"
        android:textColor="@color/txt_color"
        android:textSize="17dp" />

    <EditText
        android:id="@+id/et_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_custom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15.5px"
        android:layout_marginRight="15.5px"
        android:background="@drawable/btn_gray_bord"
        android:hint="@string/hint_input_relation"
        android:padding="7px"
        android:textSize="15dp" />


</RelativeLayout>