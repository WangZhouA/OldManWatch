<?xml version="1.0" encoding="utf-8"?>
<com.saiyi.oldmanwatch.view.recyclerview.SwipeItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/appWhite">

    <RelativeLayout
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="@dimen/px_15"
        android:paddingRight="@dimen/px_15"
        app:layout_itemType="main">


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/remind_time"
            android:textColor="@color/txt_color"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/into"
            android:gravity="center_vertical"
            android:text="11:00"
            android:textColor="@color/hint_color"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_cycle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/px_10"
            android:layout_toLeftOf="@id/tv_time"
            android:gravity="center_vertical"
            android:text="@string/every_day"
            android:textColor="@color/hint_color"
            android:textSize="15dp" />
    </RelativeLayout>

    <Button
        android:id="@+id/tv_delete"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/del_color"
        android:text="@string/detele"
        android:textColor="@color/appWhite"
        android:textSize="15dp"
        app:layout_itemType="menu" />
</com.saiyi.oldmanwatch.view.recyclerview.SwipeItemLayout>