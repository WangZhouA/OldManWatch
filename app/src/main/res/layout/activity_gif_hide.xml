<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0786E7">


    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请光脚上秤"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="#FFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.1"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="测量时，把秤放在平坦而坚硬的地面，并光脚上秤，测量数据才能准确。"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        android:layout_marginTop="20dp"

        />


    <ImageView
        android:id="@+id/im_ceng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gi"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />
    <ImageView
        android:id="@+id/im_dc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/gf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/im_ceng"
        app:layout_constraintBottom_toBottomOf="@+id/im_ceng"
        app:layout_constraintVertical_bias="4"

        />




    <TextView
        android:id="@+id/btn_ceng"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="我已上秤"
        android:textColor="#FFF"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/btn_shangceng_bg"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.9"
        />


</android.support.constraint.ConstraintLayout>
