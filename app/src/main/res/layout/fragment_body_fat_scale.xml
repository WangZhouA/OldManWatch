<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.saiyi.oldmanwatch.utils.ScrollInterceptScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="186dp"
                android:background="@color/appColor"
                android:orientation="horizontal">

                <com.saiyi.oldmanwatch.view.CircleImageView
                    android:id="@+id/civ_pic"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:src="@mipmap/devicesbody_fat"
                    custom:layout_constraintLeft_toLeftOf="parent"
                    custom:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_body_weight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/appWhite"
                    android:textSize="@dimen/dp_20"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintLeft_toLeftOf="parent"
                    custom:layout_constraintRight_toRightOf="parent"
                    custom:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_use_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="15dp"
                    android:drawableRight="@mipmap/into"
                    android:gravity="center_vertical"
                    android:textColor="@color/appWhite"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="@string/catty"
                    android:textColor="@color/appWhite"
                    custom:layout_constraintBottom_toBottomOf="@+id/tv_body_weight"
                    custom:layout_constraintLeft_toRightOf="@id/tv_body_weight" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text=""
                    android:textColor="@color/appWhite"
                    custom:layout_constraintLeft_toLeftOf="parent"
                    custom:layout_constraintRight_toRightOf="parent"
                    custom:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:text="@string/body_score"
                    android:textColor="@color/appWhite"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintLeft_toLeftOf="parent" />

                <TextView
                    android:id="@+id/tv_body_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="O"
                    android:textColor="@color/appWhite"
                    custom:layout_constraintBottom_toTopOf="@id/tv_score"
                    custom:layout_constraintLeft_toLeftOf="@id/tv_score"
                    custom:layout_constraintRight_toRightOf="@id/tv_score" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="@string/body_type"
                    android:textColor="@color/appWhite"
                    custom:layout_constraintBottom_toBottomOf="parent"
                    custom:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:id="@+id/tv_body_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/appWhite"
                    android:textSize="@dimen/dp_20"
                    custom:layout_constraintBottom_toTopOf="@id/tv_type"
                    custom:layout_constraintLeft_toLeftOf="@id/tv_type"
                    custom:layout_constraintRight_toRightOf="@id/tv_type" />
            </android.support.constraint.ConstraintLayout>

            <com.saiyi.oldmanwatch.view.MyRecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/appWhite"
                android:padding="@dimen/dp_10" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >




                </LinearLayout>




            </LinearLayout>




            <com.saiyi.oldmanwatch.view.BMIView
                android:id="@+id/BMIView1"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@color/appWhite"
                app:currentVal="24"
                app:maxNormal="28"
                app:maxVal="32"
                app:minNormal="18"
                app:minVal="0"
                app:normalText="24"
                app:normalTextSize="12dp"
                android:visibility="gone"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="@string/bmi_title"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                android:text="@string/bmi_txt" />
        </LinearLayout>
    </com.saiyi.oldmanwatch.utils.ScrollInterceptScrollView>
</LinearLayout>